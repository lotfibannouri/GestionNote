
@model Etudiant
<div>
    <h3>Modifier un Etudiant</h3>

</div>
<form class="needs-validation" novalidate="" asp-controller="Etudiant" asp-action="Edit" method="post">
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="firstName" class="form-label">Nom</label>
              <input type="hidden" asp-for="ID" />
              <input type="text" class="form-control" id="nom" placeholder="" required="" asp-for="Nom">
             
            </div>

            <div class="col-sm-6">
              <label for="lastName" class="form-label">Prénom</label>
              <input type="text" class="form-control" id="prénom" placeholder=""  required="" asp-for="Prenom">
             
            </div>


         
          </div>

          <hr class="my-4">


          <button class="w-100 btn btn-primary btn-lg" type="submit">Editer</button>
          <a class="w-100 btn btn-danger btn-lg" asp-controller="Etudiant" asp-action="index">
              Cancel
          </a>
        </form>